@model List<Finances.DtoLayer.DTOs.Team.ResultTeamDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0"> Sorular</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ad</th>
                        <th scope="col">Soyad</th>
                        <th scope="col">Departman</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.TeamID</th>
                            <td>@item.TeamName</td>
                            <td>@item.TeamSurname</td>
                            <td>@item.TeamDepartment</td>
                            <td>@item.TeamImage</td>
                            <td><a asp-controller="Team" asp-action="DeleteTeam" asp-route-id="@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Team" asp-action="UpdateTeam" asp-route-id="@item.TeamID" class="btn btn-outline-warning">Güncelleme</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <td><a asp-controller="Team" asp-action="AddTeam" class="btn btn-outline-success">Ekle</a></td>

    </div>
</div>


