@model List<Finances.DtoLayer.DTOs.Blog.ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Hakkımızda</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">İçerik</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Yazar</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.BlogID</th>
                            <td>@item.BlogTitle</td>
                            <td>@item.BlogDescription</td>
                            <td>@item.BlogDate</td>
                            <td>@item.BlogWriter</td>
                            <td>@item.BlogImage</td>
                            <td><a asp-controller="Blog" asp-action="DeleteBlog" asp-route-id="@item.BlogID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Blog" asp-action="UpdateBlog" asp-route-id="@item.BlogID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <a asp-controller="Blog" asp-action="AddBlog" class="btn btn-outline-success">Ekle</a>
    </div>
</div>

