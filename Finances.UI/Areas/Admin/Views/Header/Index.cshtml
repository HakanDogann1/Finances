@model List<Finances.DtoLayer.DTOs.Header.ResultHeaderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Mutlu Müşteri</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık 1</th>
                        <th scope="col">Başlık 2</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.HeaderID</th>
                            <td>@item.HeaderTitle1</td>
                            <td>@item.HeaderTitle2</td>
                            <td>@item.HeaderImage</td>
                            <td><a asp-controller="Header" asp-action="DeleteHeader" asp-route-id="@item.HeaderID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Header" asp-action="UpdateHeader" asp-route-id="@item.HeaderID" class="btn btn-outline-warning">Güncelleme</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <td><a asp-controller="Header" asp-action="AddHeader" class="btn btn-outline-success">Ekle</a></td>

    </div>
</div>
