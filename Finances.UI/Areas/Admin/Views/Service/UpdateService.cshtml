@model Finances.DtoLayer.DTOs.Service.UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Hizmet Ekleme Sayfası</h4>
        <h6 class="card-subtitle"></h6>
        <form method="post">
            <div>
                <section>
                    <input type="hidden" asp-for="ServiceID"/>
                    <label for="userName">Başlık </label>
                    <input type="text" class="required form-control" asp-for="ServiceTitle">
                    <label for="password">İçerik</label>
                    <input type="text" class="required form-control" asp-for="ServiceDescription">
                    <label for="password">Resim</label>
                    <input type="text" class="required form-control" asp-for="ServiceImage">
                </section>
                <br />
                <button class="btn btn-outline-success">Ekle</button>
            </div>
        </form>
    </div>
</div>

