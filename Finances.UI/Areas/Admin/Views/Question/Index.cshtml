@model List<Finances.DtoLayer.DTOs.Question.ResultQuestionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0"> Sorular</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">İçerik</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.QuestionID</th>
                            <td>@item.QuestionTitle</td>
                            <td>@item.QuestionDescription</td>
                            <td><a asp-controller="Question" asp-action="DeleteQuestion" asp-route-id="@item.QuestionID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Question" asp-action="UpdateQuestion" asp-route-id="@item.QuestionID" class="btn btn-outline-warning">Güncelleme</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <td><a asp-controller="Question" asp-action="AddQuestion" class="btn btn-outline-success">Ekle</a></td>

    </div>
</div>

