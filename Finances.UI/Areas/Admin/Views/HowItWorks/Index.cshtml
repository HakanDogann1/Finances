
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Ne Yapıyoruz ?</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">İçerik</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.HowItWorksID</th>
                            <td>@item.HappyComment</td>
                            <td><a asp-controller="HowItWorks" asp-action="DeleteHowItWorks" asp-route-id="@item.HowItWorksID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="HowItWorks" asp-action="UpdateHowItWorks" asp-route-id="@item.HowItWorksID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <td><a asp-controller="HowItWorks" asp-action="AddHowItWorks" class="btn btn-outline-success">Ekle</a></td>
    </div>
</div>

