@model List<Finances.DtoLayer.DTOs.AboutUsService.ResultAboutUsServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Hakkımızda</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">İçerik</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.AboutUsServiceID</th>
                            <td>@item.AboutUsServiceTitle</td>
                            <td>@item.AboutUsServiceDescription</td>
                            <td>@item.AboutUsServiceImage</td>
                            <td><a asp-controller="AboutUsService" asp-action="DeleteAboutUsService" asp-route-id="@item.AboutUsServiceID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="AboutUsService" asp-action="UpdateAboutUsService" asp-route-id="@item.AboutUsServiceID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <a asp-controller="AboutUsService" asp-action="AddAboutUsService" class="btn btn-outline-success">Ekle</a>
    </div>
</div>

