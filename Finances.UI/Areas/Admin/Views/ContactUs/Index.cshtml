@model List<Finances.DtoLayer.DTOs.ContactUs.ResultContactUsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">İletişim</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İkon</th>
                        <th scope="col">Lokasyon</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.ContactUsID</th>
                            <td>@item.ContactUsIcon</td>
                            <td>@item.ContactUsLocation</td>
                            <td><a asp-controller="ContactUs" asp-action="DeleteContactUs" asp-route-id="@item.ContactUsID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="ContactUs" asp-action="UpdateContactUs" asp-route-id="@item.ContactUsID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }


            </table>

        </div>
        <br />
        <td><a asp-controller="ContactUs" asp-action="AddContactUs" class="btn btn-outline-success">Ekle</a></td>

    </div>
</div>


