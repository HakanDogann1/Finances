@model Finances.DtoLayer.DTOs.AboutUs.UpdateAboutUsDto
@{
    ViewData["Title"] = "UpdateAboutUs";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Hakkımzıda Güncelleme Sayfası</h4>
        <h6 class="card-subtitle"></h6>
        <form method="post">
            <div>
                <section>
                    <input type="hidden" asp-for="AboutUsID"/>
                    <label for="userName">Başlık </label>
                    <input type="text" class="required form-control" asp-for="AboutUsTitle">
                    <label for="password">İçerik </label>
                    <input type="text" class="required form-control" asp-for="AboutUsDescription">
                    <label for="confirm">Resim </label>
                    <input type="text" class="required form-control" asp-for="AboutUsImage">
                </section>
              <br />
              <button class="btn btn-outline-success">Ekle</button>
            </div>
        </form>
    </div>
</div>

