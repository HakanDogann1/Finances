@model List<Finances.DtoLayer.DTOs.AboutUs.ResultAboutUsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Hakkımızda</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">İçerik</th>
                        <th scope="col">Resim</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.AboutUsID</th>
                            <td>@item.AboutUsTitle</td>
                            <td>@item.AboutUsDescription</td>
                            <td>@item.AboutUsImage</td>
                            <td><a asp-controller="AboutUs" asp-action="DeleteAboutUs" asp-route-id="@item.AboutUsID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="AboutUs" asp-action="UpdateAboutUs" asp-route-id="@item.AboutUsID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }


            </table>
          
        </div>
        <br />
        <a asp-controller="AboutUs" asp-action="AddAboutUs" class="btn btn-outline-success">Ekle</a>
    </div>
</div>


