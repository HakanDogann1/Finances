@model List<Finances.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Hakkımızda</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ad</th>
                        <th scope="col">Soyad</th>
                        <th scope="col">Şehir</th>
                        <th scope="col">Kullanıcı Adı</th>
                        <th scope="col">Rol Ata</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.City</td>
                            <td>@item.UserName</td>
                            <td><a asp-controller="RoleAssign" asp-action="UserRoleAssign" asp-route-id="@item.Id" class="btn btn-outline-warning">Rol Ata</a></td>
                        </tr>
                    }


            </table>

        </div>
    </div>
</div>